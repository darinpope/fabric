{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.10.7/.schema/devbox.schema.json",
  "packages": [
    "python@3.12.3",
    "pipx@1.4.3",
    "ffmpeg@6.1.1",
    "nodejs@22.2.0",
    "teller@1.5.6"
  ],
  "shell": {
    "init_hook": [
      "echo 'Welcome to devbox!' > /dev/null",
      "eval \"$(teller sh)\""
    ],
    "scripts": {
      "tlfc_extract_wisdom": [
        "cat $1 | fabric --model gpt-4o -sp extract_wisdom"
      ]
    }
  }
}
