{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.10.7/.schema/devbox.schema.json",
  "packages": [
    "python@3.12.4",
    "pipx@1.6.0",
    "ffmpeg@6.1.1",
    "nodejs@22.3.0",
    "teller@1.5.6"
  ],
  "shell": {
    "init_hook": [
      "echo 'Welcome to devbox!' > /dev/null",
      "eval \"$(teller sh)\""
    ],
    "scripts": {
      "tlfc-extract-wisdom": [
        "cat $1 | fabric --model llama3.1:8b -sp extract_wisdom"
      ],
      "update-fabric": [
        "pipx install . --force",
        "fabric --update",
        "echo 'now close and restart your shell'"
      ]
    }
  }
}
